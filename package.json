{
  "name": "@spheron/desub-js",
  "version": "2.0.1",
  "description": "Typescript library for working with the decentralised subscription contracts in Spheron",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Spheron Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/argoapp-live/desub-js/issues"
  },
  "homepage": "https://github.com/argoapp-live/desub-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argoapp-live/desub-js.git"
  },
  "keywords": [
    "Spheron",
    "Network",
    "Hosting",
    "Storage",
    "Typescript",
    "Badass",
    "Payment"
  ],
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --quiet --fix",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different 'src/**/*.ts'",
    "prettier:write": "npm run prettier:base -- --write 'src/**/*.ts'",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'",
    "build:clean": "rm -rf ./build",
    "build:dry": "tsc -noEmit -p ./tsbuild.json",
    "build": "rm -rf ./build && tsc -p ./tsbuild.json"
  },
  "dependencies": {
    "@biconomy/mexa": "2.0.33",
    "@ethersproject/abstract-signer": "^5.0.12",
    "@ethersproject/contracts": "^5.0.10",
    "@ethersproject/providers": "^5.0.20",
    "@ethersproject/wallet": "^5.0.11",
    "axios": "^0.21.1",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.7.1",
    "lodash": "^4.17.21",
    "web3": "^1.3.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.2.0",
    "@types/node": "^15.6.0",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^10.0.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=10.0.0 <16.14.3"
  }
}
